<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="deepfocus.controller.PomodoroController" 
      alignment="CENTER" spacing="25" style="-fx-padding: 30px;">
    
    <!-- Container com fundo arredondado -->
    <VBox styleClass="timer-container" alignment="CENTER" spacing="25" maxWidth="600">
        <!-- Timer Display -->
        <StackPane>
            <Circle radius="80" styleClass="timer-circle"/>
            <Label fx:id="timerLabel" text="00:00:00" styleClass="timer-label"/>
        </StackPane>
        
        <!-- Configurações -->
        <HBox alignment="CENTER" spacing="50">
            <!-- Tempo de Foco -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Tempo de foco:" styleClass="field-label"/>
                <TextField fx:id="tempoFocoField" prefWidth="200" promptText="00:00:00" styleClass="text-field"/>
            </VBox>
            
            <!-- Tempo de Descanso -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Tempo de descanso:" styleClass="field-label"/>
                <TextField fx:id="tempoDescansoField" prefWidth="200" promptText="00:00:00" styleClass="text-field"/>
            </VBox>
        </HBox>
        
        <!-- Botões -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="startButton" text="Começar" styleClass="primary-button" onAction="#handleStart"/>
            <Button fx:id="resetButton" text="Reiniciar" styleClass="secondary-button" onAction="#handleReset"/>
        </HBox>
    </VBox>
    
</VBox>
