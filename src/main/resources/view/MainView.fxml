<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="deepfocus.controller.MainController" 
            stylesheets="@../styles.css" prefWidth="1000" prefHeight="600">
    
    <!-- Header -->
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="15">
            <Label text="☰" style="-fx-font-size: 20px; -fx-cursor: hand; -fx-text-fill: white;" onMouseClicked="#toggleMenu"/>
            <Label text="DEEPFOCUS" styleClass="header-title"/>
        </HBox>
    </top>
    
    <!-- Menu Lateral -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" prefWidth="165" spacing="0">
            <Button text="Home" styleClass="menu-button,menu-button-selected" maxWidth="Infinity" 
                    onAction="#showHome"/>
            <Button text="Cronômetro" styleClass="menu-button" maxWidth="Infinity" 
                    onAction="#showCronometro"/>
            <Button text="Lembretes" styleClass="menu-button" maxWidth="Infinity" 
                    onAction="#showLembretes"/>
            <Button text="Notas" styleClass="menu-button" maxWidth="Infinity" 
                    onAction="#showNotas"/>
            <Button text="Histórico" styleClass="menu-button" maxWidth="Infinity" 
                    onAction="#showHistorico"/>
        </VBox>
    </left>
    
    <!-- Área de Conteúdo -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <VBox alignment="CENTER" spacing="20">
                <Label text="+ Criar" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                
                <Button text="Cronômetro" styleClass="primary-button" prefWidth="350"
                        onAction="#showCronometro"/>
                
                <Button text="Lembrete" styleClass="primary-button" prefWidth="350"
                        onAction="#showLembretes"/>
                
                <Button text="Adicionar nota" styleClass="primary-button" prefWidth="350"
                        onAction="#showNotas"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
