<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="deepfocus.controller.HistoricoController" 
      alignment="CENTER" spacing="20" style="-fx-padding: 30px;">
    
    <!-- Container com fundo arredondado -->
    <VBox styleClass="table-container" spacing="20" maxWidth="800">
        <!-- Tabela de HistÃ³rico -->
        <TableView fx:id="historicoTable" prefHeight="350" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dataColumn" text="Data" prefWidth="200"/>
                <TableColumn fx:id="tempoFocoColumn" text="Tempo de foco" prefWidth="200"/>
                <TableColumn fx:id="tempoDescansoColumn" text="Tempo de descanso" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
</VBox>
